<div class="form center-block panel">

  <h2>Editar Conta</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", hint: "Deixe em branco se não deseja alterar", required: false %>
      <%= f.input :password_confirmation, required: false, label: "Confirme a senha" %>
      <%= f.input :current_password, hint: "Sua senha atual é necessária para confirmar as alterações", required: true, label: "Senha atual" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Atualizar" %>
    </div>
  <% end %>

  <h3>Apagar minha conta</h3>

  <p>Não satisfeito? <%= link_to "Apagar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza disso?" }, method: :delete %></p>

  <%= link_to "Voltar", :back %>

</div>
