<h1>Filmes</h1>
<table>
	<thead>
		<tr>
			<td>Nome</td>
			<td>Ano</td>
			<td>Gênero</td>
			<td>Diretor</td>
			<td>IMDB</td>
			<td>Disponível?</td>
			<td>Opções</td>
		</tr>
	</thead>
	<tbody>
		<% @movies.each do |movie| %>
			<tr>
				<td><%= link_to movie.name, movie %></td>
				<td><%= movie.year %></td>
				<td><%= movie.genre %></td>
				<td><%= movie.director %></td>
				<td><%= movie.imdb %></td>
				<td><%= movie.avaliable ? "Sim" : "Não" %></td>
				<td>
					<%= link_to "Editar", edit_movie_path(movie), :class => "edit" %>
					<%= link_to "Apagar", movie_path(movie), 
																method: :delete, data: { confirm: "Tem certeza?" }, 
																:class => "delete" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= link_to "Novo Filme", new_movie_path, :class => "new" %>